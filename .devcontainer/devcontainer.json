{
  "name": "Pollinations Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",  // official MS Python image
  "features": {},
  "postCreateCommand": "pip install -r requirements.txt",
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "python.formatting.provider": "black"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "forwardPorts": [8000],
  "remoteUser": "vscode"
}
